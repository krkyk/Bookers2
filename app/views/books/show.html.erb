<%=render"layouts/notifications"%>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 mt-3">
      <h2>User info</h2>
      <%=image_tag @user.profile_image %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%=@user.name%></th>
          </tr>
          <th>introduction</th>
          <th><%=@user.introduction%></th>
        </tbody>
      </table>
      <div class="row">
        <%=link_to(edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block")do%><i class="fas fa-user-cog"></i><%end%>
      </div>
      <h2 class="mt-3">New book</h2>
      <%=form_with model: @book, local: true do |f|%>
      <div class="form-group">
       <%=f.label :Title,class: "book_title"%>
       <%=f.text_field :title,class: "form-control book_title"%>
      </div>
      <div class="form-group mt-2">
        <%=f.label :Opinion,class: "book_opinion"%>
        <%=f.text_area :body,class: "form-control book_body"%>
      </div>
      <div class="form-group">
        <%=f.submit"Create Book",class:"btn btn-success btn-sm mt-2"%>
      </div>
      <%end%>
      </div>

      <div class="mt-3 col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%=image_tag @book1.user.get_profile_image(40,40)%><br>
                <%=link_to @book1.user.name,user_path(@book1.user.id)%>
              </td>
              <td>
                <%=link_to @book1.title, book_path(@book1.id)%>
              </td>
              <td><%= @book1.body%></td>
              <%if @book1.user==current_user%>
              <td>
                <%=link_to "Edit",edit_book_path(@book1.id),class:"btn btn-success btn-sm"%>
              </td>
              <td>
                <%=link_to "Destroy",book_path(@book1.id),method: :delete,"data-confirm"=>"本当に消しますか？",class:"btn btn-danger btn-sm"%>
              </td>
              <%end%>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>










