<div class="container px-5 px-sm-0">
  <%#if @book.errors.any?%>
  <%#=@book.errors.count%>error prohibited this obj from<br>being saved:
  <!--<ul>-->
    <%#=@book.error.full_messages.each do |message|%>
    <li><%#=message%></li>
    <%#end%>
  <!--</ul>-->
  <%#end%>
  <div class="row">
    <div class="col-md-3 mt-3">
      <h2>User info</h2>
      <%=image_tag @user.get_profile_image(60,60)%>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%=@user.name%></th>
          </tr>
          <th>introduction</th>
          <th><%=@user.introduction%></th>
        </tbody>
      </table>
      <div class="row">
        <%=link_to(edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block")do%><span><i class="fa-solid fa-user-gear"></i></span><%end%>
      </div>
      <h2 class="mt-3">New book</h2>
      <%=form_with model: @book, local: true do |f|%>
      <div class="field">
       <%=f.label :Title%> <br>
       <%=f.text_field :title%>
      </div>
      <div class="field mt-2">
        <%=f.label :Option%><br>
        <%=f.text_area :body%>
      </div>
      <div class="action">
        <%=f.submit"Create Book",class:"btn btn-success btn-sm mt-2"%>
      </div>
      <%end%>
      </div>

      <div class="mt-3 col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <%@books.each do |book|%>
          <tbody>
            <tr>
              <td>
                <%=link_to(user_path(book.user.id))do%><%=image_tag book.user.get_profile_image(40,40)%><%end%>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td><%=book.body%></td>
            </tr>
          </tbody>
          <%end%>
        </table>
    </div>
  </div>
</div>
