<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%if @user.errors.any?%>
      <h3><%=@user.errors.count%>error prohibited this obj from being saved:</h3>
      <ul>
        <%@user.errors.full_messages.each do |message|%>
        <li><%=message%></li>
        <%end%>
      </ul>
      <%end%>
      <%=form_with model: @user,local: true do |f|%>
      <div class="form-group">
        <%=f.label :name,class: "user_name"%>
        <%=f.text_field :name,class: "form-control name"%>
      </div>
      <div class="form-group">
        <%=f.label :profile_image,class: "user_image"%>
        <%=f.file_field :profile_image,accept:"image/*"%>
      </div>
      <div class="form-group">
        <%=f.label :introduction,class: "user_introduction"%>
        <%=f.text_area :introduction,class: "form-control introduction"%>
      </div>
      <div class="form-group">
        <%=f.submit"Update User",class:"btn btn-secondary btn-sm"%>
      </div>
      <%end%>
    </div>
  </div>
</div>